 */
function lti_tool_provider_get_column_desc($col) {
  $extra_col = array();
  $schema = drupal_get_schema('lti_tool_provider_consumer');
  $fields = $schema['fields'];
  foreach ($fields as $field => $value) {
    if ($col == $field) {
      return $fields[$field]['description'];
    }
  }
