 */
function lti_tool_provider_retrieve_consumer_secrets() {
  $entites = lti_tool_provider_consumer_load_multiple();
  $list = array();
  foreach ($entites as $entity) {
    $list[] = $entity->lti_tool_provider_consumer_secret;
